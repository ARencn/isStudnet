page{
    background-color: #fff;
   
}
.shop{
    padding: 20rpx;
    border-bottom: 1rpx solid #ddd;
    display: flex;
    position: relative;
}
.shop-img{
    width: 160rpx;
    height:160rpx;
}
.shop-info{
    width: 520rpx;
    height: 160rpx;
    display: flex;
    flex-direction: column;
    font-size: 12px;  
    color: #666;
    line-height: 1.5;
    margin-left: 20rpx;

}
.shop-title{
    font-size: 16 px;
    color: #333;
    width: 370rpx;
}
.shop-star{
    position: absolute;
    right: 20rpx;
    top:20rpx;
}
.star-before{
    color: #f19e38;
    position: absolute;
    left: 0;
    top: 0; 
    overflow: hidden;
}
.star-after{
    color: #e2e2e2;

}