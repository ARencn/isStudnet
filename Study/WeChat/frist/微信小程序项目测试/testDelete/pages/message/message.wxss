page{
    background-color: #f1f1f1;
}
.card{
    background-color: #fff;
    border: 1rpx solid #ddd;
    border-radius: 20rpx;
    margin: 60rpx 20rpx;
    padding: 20rpx 25rpx;
    display: flex;
    flex-direction: column;
}

.card-title{
    font-size: 20px;
}
.card-date{
    font-size: 14px;
    color: #ccc;
    border-bottom: 1rpx solid #ddd;
    margin-bottom: 20rpx;
    padding-bottom: 20rpx;
}
.card-image{
    width: 100%;
    height: 300rpx;
}
.card-desc{
    font-size: 16px;
    color: #333;
    border-bottom: 1px solid #ddd;
    margin: 10rpx 0;
    padding-bottom: 20rpx;

}

.card-read{
    font-size: 14px;
    color: #666;
  
}
